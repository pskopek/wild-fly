<?xml version="1.0" encoding="UTF-8"?>
<datasources>
	<datasource jndi-name="java:jboss/datasources/calleridentityDS"
		pool-name="calleridentityDS">
		<connection-url>jdbc:h2:mem:test;DB_CLOSE_DELAY=-1</connection-url>
		<driver>h2</driver>
		<new-connection-sql>select current_user()</new-connection-sql>
		<pool>
			<allow-multiple-users/>
		</pool>
		<security>
			<security-domain>CallerIdentityDomain</security-domain>
		</security>
	</datasource>
</datasources>
